# standard keyboard modifiers according to xmodmap(1)
# see xmodmap {-pk|-pke} for complete keymap table
set $ALT Mod1
set $WIN Mod4
set $CTRL Control
# Print: 107 - PrintScreen
# Menu: 135

# font for window title
font pango:Inconsolata 10

# use Mouse+$ALT to drag floating windows to their wanted position
floating_modifier $ALT

# kill focused window
bindsym $ALT+Shift+Q kill

# change focus
bindsym $ALT+h focus left
bindsym $ALT+j focus down
bindsym $ALT+k focus up
bindsym $ALT+l focus right

# move focused window
bindsym $ALT+Shift+h move left
bindsym $ALT+Shift+j move down
bindsym $ALT+Shift+k move up
bindsym $ALT+Shift+l move right

# split in horizontal orientation
bindsym $ALT+g split h

# split in vertical orientation
bindsym $ALT+v split v

# enter fullscreen mode for the focused container
bindsym $ALT+f fullscreen

# change container layout (stacked, tabbed, default)
# bindsym $ALT+s layout stacking
bindsym $ALT+w layout tabbed
bindsym $ALT+e layout default

# toggle tiling / floating
bindsym $ALT+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $ALT+space focus mode_toggle

# focus the parent container
bindsym $ALT+a focus parent

# focus the child container
bindsym $ALT+c focus child

# switch to workspace
bindsym $ALT+1 workspace 1
# bindsym $ALT+1 workspace 1: main
bindsym $ALT+2 workspace 2
bindsym $ALT+3 workspace 3
bindsym $ALT+4 workspace 4
bindsym $ALT+5 workspace 5
bindsym $ALT+6 workspace 6
bindsym $ALT+7 workspace 7
bindsym $ALT+8 workspace 8
bindsym $ALT+9 workspace 9
bindsym $ALT+0 workspace 10

# Workspace-output assignments:
workspace 1 output LVDS1
workspace 2 output HDMI1
workspace 3 output LVDS1
workspace 4 output HDMI1
workspace 5 output LVDS1
workspace 6 output HDMI1
workspace 7 output LVDS1
workspace 8 output HDMI1
workspace 9 output LVDS1
workspace 0 output HDMI1

# Focus initial workspace:
exec --no-startup-id exec i3-msg "workspace 1"

# move focused container to workspace
bindsym $ALT+Shift+exclam move container to workspace 1
bindsym $ALT+Shift+at move container to workspace 2
bindsym $ALT+Shift+numbersign move container to workspace 3
bindsym $ALT+Shift+dollar move container to workspace 4
bindsym $ALT+Shift+percent move container to workspace 5
bindsym $ALT+Shift+asciicircum move container to workspace 6
bindsym $ALT+Shift+ampersand move container to workspace 7
bindsym $ALT+Shift+asterisk move container to workspace 8
bindsym $ALT+Shift+parenleft move container to workspace 9
bindsym $ALT+Shift+parenright move container to workspace 10

# reload the configuration file
bindsym $ALT+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $ALT+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $ALT+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode
	bindsym h resize shrink width 10 px or 1 ppt
	bindsym j resize grow height 10 px or 1 ppt
	bindsym k resize shrink height 10 px or 1 ppt
	bindsym l resize grow width 10 px or 1 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $ALT+r mode "resize"

# Start i3bar:
bar {
	status_command exec i3status
	tray_output primary
	# To set primary output:
	# xrandr --output LVDS1 --primary
}

# Set floating mode for some programs:
for_window [class="Skype"] floating enable
for_window [class="Gimp"] floating enable
for_window [class="Claws-mail" title="Search messages"] floating enable
for_window [class="Claws-mail" title="Find in current message"] floating enable

bindsym $WIN+l exec --no-startup-id exec ~/os_settings/other_files/lock_screen.sh
bindsym $WIN+h exec sudo poweroff

bindsym $WIN+k exec --no-startup-id exec keynav

# Define Alt+Tab in order not to remove file contents in vim by this key combination:
bindsym $ALT+Tab focus left

# terminal
# bindsym $ALT+Return exec exec x-terminal-emulator -e vifm
bindsym $ALT+Return exec exec ~/os_settings/other_files/open_terminal.sh vifm

# translator
bindsym $ALT+t exec --no-startup-id exec goldendict $(clipboard.sh -o)

# browser
bindsym $ALT+b exec exec vimb -s ~/os_settings/other_files/start_page.html
