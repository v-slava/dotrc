# Attendance:
bindsym $WIN+a exec --no-startup-id exec chromium http://myspot/_layouts/SRK.AttendanceControl/MyAttendance.aspx

# autostart mail client:
exec --no-startup-id exec i3-msg 'workspace 1; exec --no-startup-id exec claws-mail'
# Hotkey to open mail client:
bindsym $ALT+m exec --no-startup-id exec claws-mail
# Hotkeys to open specified folders:
bindsym $ALT+Shift+v exec --no-startup-id exec claws-mail --select '#imap/viacheslav.volkov.1/INBOX'
bindsym $ALT+Shift+s exec --no-startup-id exec claws-mail --select '#imap/slava65536/INBOX'

# Start network manager applet:
exec --no-startup-id exec nm-applet

# Start keyboard layout indicator/switcher:
exec --no-startup-id exec fbxkb

# Start alsaplayer:
exec --no-startup-id exec alsaplayer -i daemon --looplist --startvolume 1.0 1>/dev/null &

# alsaplayer hotkeys:
bindsym $ALT+p exec --no-startup-id alsaplayer --pause
bindsym $WIN+n exec --no-startup-id alsaplayer --next
bindsym $WIN+p exec --no-startup-id alsaplayer --prev
bindsym $WIN+b exec --no-startup-id alsaplayer --relative -3
bindsym $WIN+f exec --no-startup-id alsaplayer --relative +3
# volume hotkeys:
bindsym $WIN+u exec --no-startup-id exec ~/os_settings/other_files/volume.sh +3%
bindsym $WIN+d exec --no-startup-id exec ~/os_settings/other_files/volume.sh -3%
# sound output (bluetooth headset / built-in audio):
bindsym $ALT+Shift+b exec --no-startup-id exec ~/os_settings/other_files/bluetooth_toggle.sh

# dmenu (a program launcher)
bindsym $ALT+d exec --no-startup-id exec dmenu_run -fn 'Inconsolata-16:monospace'

