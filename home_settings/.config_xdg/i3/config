# standard keyboard modifiers according to xmodmap(1)
# see xmodmap {-pk|-pke} for complete keymap table
set $Alt_L Mod1
set $Alt_R Mod3
set $WIN Mod4
set $CTRL Control
# Print: 107 - PrintScreen
# Menu: 135

# font for window title
font pango:Inconsolata LGC 8

# use Mouse+$Alt_L to drag floating windows to their wanted position
floating_modifier $Alt_L

# kill focused window
bindsym $Alt_R+Shift+Q kill

# switch to virtual console 1
bindsym $CTRL+$ALT_L+F1 exec --no-startup-id exec sudo chvt 1

# change focus
# bindsym $Alt_L+h exec --no-startup-id exec ~/os_settings/other_files/i3_focus.py left
bindsym $Alt_L+h focus left
bindsym $Alt_L+j focus down
bindsym $Alt_L+k focus up
bindsym $Alt_L+l focus right

# move focused window
bindsym $Alt_L+Shift+h move left
bindsym $Alt_L+Shift+j move down
bindsym $Alt_L+Shift+k move up
bindsym $Alt_L+Shift+l move right

# split in horizontal orientation
bindsym $Alt_R+h split h

# split in vertical orientation
bindsym $Alt_R+v split v

# enter fullscreen mode for the focused container
bindsym $Alt_L+f fullscreen

# change container layout (stacked, tabbed, default)
# bindsym $Alt_L+s layout stacking
bindsym $Alt_L+w layout tabbed
bindsym $Alt_L+e layout default

# toggle tiling / floating
bindsym $Alt_L+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $Alt_L+space focus mode_toggle

# focus the parent container
bindsym $Alt_L+a focus parent

# focus the child container
bindsym $Alt_L+c focus child

# switch to workspace
bindsym $Alt_L+1 workspace 1
# bindsym $Alt_L+1 workspace 1: main
bindsym $Alt_L+2 workspace 2
bindsym $Alt_L+3 workspace 3
bindsym $Alt_L+4 workspace 4
bindsym $Alt_L+5 workspace 5
bindsym $Alt_L+6 workspace 6
bindsym $Alt_L+7 workspace 7
bindsym $Alt_L+8 workspace 8
bindsym $Alt_L+9 workspace 9
bindsym $Alt_L+0 workspace 10

# Workspace-output assignments:
workspace 1 output LVDS1
workspace 2 output HDMI1
workspace 3 output LVDS1
workspace 4 output HDMI1
workspace 5 output LVDS1
workspace 6 output HDMI1
