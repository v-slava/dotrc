# Focus initial workspace:
exec --no-startup-id exec i3-msg "workspace 1"

# move focused container to workspace
bindsym $Alt_R+Shift+exclam move container to workspace 1
bindsym $Alt_R+Shift+at move container to workspace 2
bindsym $Alt_R+Shift+numbersign move container to workspace 3
bindsym $Alt_R+Shift+dollar move container to workspace 4
bindsym $Alt_R+Shift+percent move container to workspace 5
bindsym $Alt_L+Shift+asciicircum move container to workspace 6
bindsym $Alt_L+Shift+ampersand move container to workspace 7
bindsym $Alt_L+Shift+asterisk move container to workspace 8
bindsym $Alt_L+Shift+parenleft move container to workspace 9
bindsym $Alt_L+Shift+parenright move container to workspace 10

# reload the configuration file
bindsym $Alt_R+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $Alt_R+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $Alt_R+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode
	bindsym h resize shrink width 10 px or 1 ppt
	bindsym j resize grow height 10 px or 1 ppt
	bindsym k resize shrink height 10 px or 1 ppt
	bindsym l resize grow width 10 px or 1 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $Alt_L+r mode "resize"

# Start i3bar:
bar {
	# status_command exec i3status
	status_command i3status | ~/os_settings/other_files/i3status_wrapper.py
	tray_output LVDS1
}

