nnoremap od :! /media/files/workspace/dotrc/other_files/objdump.sh -D ./%c | c++filt | less -i<CR>
nnoremap opd :! /media/files/workspace/dotrc/other_files/objdump.sh --prefix-address --show-raw-insn -D ./%c | c++filt | less -i<CR>
nnoremap oz :! /media/files/workspace/dotrc/other_files/objdump.sh -D -z ./%c | c++filt | less -i<CR>
nnoremap opz :! /media/files/workspace/dotrc/other_files/objdump.sh --prefix-address --show-raw-insn -D -z ./%c | c++filt | less -i<CR>
nnoremap os :! /media/files/workspace/dotrc/other_files/objdump.sh -S ./%c | less -i<CR>
nnoremap ops :! /media/files/workspace/dotrc/other_files/objdump.sh --prefix-address --show-raw-insn -S ./%c | less -i<CR>
