# Swap ':' and ';' in normal mode:
nnoremap ; :
nnoremap : ;

# Zoom in/out hotkeys:
nmap + :normal zI<CR>
nmap - :normal zO<CR>

# Push current page to queue for later reading and close it:
nmap <C-l> :qpush<CR>:q<CR>
# Restore first page from queue for later reading in new window:
nmap <C-r> :tabopen file:///home/volkov/os_settings/other_files/start_page.html<CR>:qpop<CR>

# noob settings begin
# noob settings end

# Use google search engine: :open s my search phrase
shortcut-add s=https://www.google.com/search?q=$0
# Use duckduckgo search engine: :open ds my search phrase
shortcut-add ds=https://duckduckgo.com/lite/?q=$0
# Use google translate (en->ru language):
shortcut-add ter=https://translate.google.com/?hl=en#en/ru/$0
# Use google translate (ru->en language):
shortcut-add tre=https://translate.google.com/?hl=en#ru/en/$0
# Use google translate (ru->de language):
shortcut-add trd=https://translate.google.com/?hl=en#ru/de/$0
# Use google translate (de->ru language):
shortcut-add tdr=https://translate.google.com/?hl=en#de/ru/$0
# Use google translate (any->any language): :open to en/ru/Phrase To Translate  (de, uk, ko)
shortcut-add to=https://translate.google.com/?hl=en#$0
# Calculate route with google maps: :open map "city hall, London" railway station, London
shortcut-add map=https://maps.google.com/maps?mode=transit&saddr=$0&daddr=$1
# Search for music:
shortcut-add mus=http://pleer.com/search?q=$0#
# https://myzuka.org
# www.audiopoisk.com
# http://mp3brainz.net/
# http://epicmusictime.com/ # online radio

# Music recognition service:
# http://audiotag.info/index.php

# Search for torrent on rutracker.org:
shortcut-add tor=http://rutracker.org/forum/tracker.php?nm=$0
# Search for videos on youtube.com:
shortcut-add y=https://www.youtube.com/results?search_query=$0

