! Use <Caps_Lock> as <BackSpace>:
! remove Lock = Caps_Lock
! keysym Caps_Lock = BackSpace
! keycode 22 = NoSymbol
! Use <BackSpace> as <Caps_Lock>:
! keycode 22 = Caps_Lock
! add Lock = Caps_Lock

! Allow usage of <Alt_R> as mod3 in i3wm:
remove mod1 = Alt_R
add mod3 = Alt_R

