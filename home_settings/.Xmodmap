! Remap <Caps_Lock+key> => <Control_L+key>, Control_L => Multi_Key.
remove Lock = Caps_Lock
remove Control = Control_L
keysym Control_L = Multi_key
keysym Caps_Lock = Control_L
! add Lock = Caps_Lock
add Control = Control_L
