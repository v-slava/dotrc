[core]
	pager = less -+FX # fix mouse scrolling
[color]
	ui = true
	diff = true
	status = true
[user]
	name = Viacheslav Volkov
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[push]
	default = simple
[alias]
	addnw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
