PHONY := all
all: download_git
	cd vifm && ./configure --disable-desktop-files --without-gtk CFLAGS="-O2 -flto" LDFLAGS="-O2 -flto"
	make -C vifm -j 9
	su -c "make -C vifm install"

PHONY += download_git
download_git:
	git clone https://github.com/vifm/vifm
	cd vifm && git tag && git checkout v0.8

PHONY += clean
clean:
	rm -rf vifm

.PHONY: $(PHONY)
